@{
    ViewData["Title"] = "Home Page";
}
@model ChatGPTApp.Models.ChatGPTModel

<div class="">
    <div class="text-center border">
        <h1 class="display-4"><b>Welcome</b></h1>
        <p><i>How can I help you...?</i></p>
    </div>
    <div class="mt-3 ">
        <form asp-controller="Home" asp-action="Index" class="d-flex justify-content-center" role="search">
            <input class="form-control w-50 me-2" type="search" placeholder="Search" name="userSearch" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
    </div>
    @if (@Model is not null)
    {
        <p>
            @Model.user_result
        </p>
    }
</div>

