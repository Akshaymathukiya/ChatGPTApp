@{
    ViewData["Title"] = "Login Page";
}
@model ChatGPT.Entities.Models.User

<link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

<partial name="_ToastrMessage"/>

<div>
    <div class="container">
        <h2>Login</h2>
        <form method="post">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="text" asp-for="Email" id="email" name="email" required>

            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" asp-for="Password" id="password" name="password" required>
            </div>
            <div class="form-group">
                <input type="submit" value="Login">
            </div>
        </form>
        <a class="d-flex justify-content-center" asp-controller="Home" asp-action="Registration">Create an account?</a>
    </div>
</div>